<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.FirstFragment">


    <ImageView
        android:id="@+id/iv_love"
        android:src="@drawable/love"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

    <TextView
        android:id="@+id/tv_love"
        android:text="Love Calculator"
        android:fontFamily="@font/ass"
        android:textSize="28sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_first_name"
        android:text="First name"
        android:textSize="18sp"
        android:fontFamily="@font/sss"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_love"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_fname"
        android:hint="He"
        android:paddingStart="20dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_first_name"
        android:background="@drawable/bg_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_second_name"
        android:text="Second name"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/sss"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/et_fname"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_sname"
        android:hint="She"
        android:paddingStart="20dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_second_name"
        android:background="@drawable/bg_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_calculate"
        android:text="Calculate"
        android:fontFamily="@font/sss"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        android:backgroundTint="@color/red"
        android:textAllCaps="false"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_sname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:indeterminateTint="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>